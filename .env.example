# Database Configuration
POSTGRES_USER=backend_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=backend_db

# This will be automatically constructed by docker-compose
# DATABASE_URL=postgresql+psycopg2://backend_user:your_secure_password_here@db:5432/backend_db

# Environment
# Set to "production" on production servers to enable strict security checks
ENVIRONMENT=development

# API Security
# Generate secure random keys for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
INTERNAL_API_KEY=your_secret_api_key_here
STATE_SECRET=your_state_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Strava OAuth
STRAVA_CLIENT_ID=your_client_id_here
STRAVA_CLIENT_SECRET=your_client_secret_here
STRAVA_REDIRECT_URI=https://api.vuhnger.dev/strava/callback
